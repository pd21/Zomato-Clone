<div class="col s10 offset-s1 restaurant-card" data-restaurant-id="<%=restaurant.R.res_id%>">
	<div class="col s12 center restaurant-card-image">  	
		<% if(restaurant.thumb){%>
			<img src="<%=restaurant.thumb%>" >
		<% }else{ %>
			<!-- images provided by this api, have dimentions 200px by 200px. Hence restricting the height the default image to 200px -->
			<img src="/images/no-image-available.jpg" width="100%" height="200px">
		<% } %>
	</div>

  	<div class="col s12 restaurant-card-detail">
	    <div class="restaurant-basic-info">
	    	<div class="restaurant-name"><%= restaurant.name %></div>
	    	<div class="chip lime darken-1 white-text rating"><%= restaurant.user_rating.aggregate_rating %> / 5</div>
	    </div>
		<div class="row restaurant-specific-info">
			<div class="col s4 info-key">
				<span class="chip">Location</span>
			</div>	
			<div class="col s8 info-value">
				<%= restaurant.location.address %>
			</div>
		</div>
		<div class="row restaurant-specific-info">
			<div class="col s4 info-key">
				<span class="chip">Cuisines</span>
			</div>	
			<div class="col s8 info-value">
				<%= restaurant.cuisines %>
			</div>
		</div>
		<div class="row restaurant-specific-info">
			<div class="col s4 info-key">
				<span class="chip">Average Cost</span>
			</div>	
			<div class="col s8 info-value">
				<%= restaurant.average_cost_for_two %> for two people
			</div>
		</div>
  	</div>
</div>